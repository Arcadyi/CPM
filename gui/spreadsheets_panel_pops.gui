				margin_right = @item_right_margin_inside

				align = right|nobaseline
				text = "#v [Pop.GetWealthProgression|+=%0]#!"
				tooltip = "TOOLTIP_POP_NET_INCOME"
			}

			vertical_divider = {}

			# POLITICS
